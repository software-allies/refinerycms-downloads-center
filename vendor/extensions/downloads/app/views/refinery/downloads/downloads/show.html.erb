<% content_for :body_content_title do %>
  <%= @download.categoy %>
<% end %>

<% content_for :body do %>
  <section>
    <h1>Categoy</h1>
    <p>
      <%=raw @download.categoy %>
    </p>
  </section>
  <section>
    <h1>Description</h1>
    <p>
      <%=raw @download.description %>
    </p>
  </section>
<% end %>

<% content_for :side_body do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="downloads">
      <% @downloads.each do |download| %>
        <li>
          <%= link_to download.categoy, refinery.downloads_download_path(download) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>
