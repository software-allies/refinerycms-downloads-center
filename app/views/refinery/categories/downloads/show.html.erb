<% content_for :body_content_title do %>
  <%= @download.title %>
<% end %>

<% content_for :body do %>
  <section>
    <h1>Title</h1>
    <p>
      <%=raw @download.title %>
    </p>
  </section>
  <section>
    <h1>Description</h1>
    <p>
      <%=raw @download.description %>
    </p>
  </section>
  <section>
    <h1>Picture</h1>
    <p>
      <%= image_fu @download.picture, nil %>
    </p>
  </section>
  <section>
    <h1>File</h1>
    <p>
      <% if @download.file.present? %>
        <%= link_to 'file', @download.file.url %>
      <% else %>
        file
      <% end %>
    </p>
  </section>
<% end %>

<% content_for :side_body do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="downloads">
      <% @downloads.each do |download| %>
        <li>
          <%= link_to download.title, refinery.categories_download_path(download) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>
