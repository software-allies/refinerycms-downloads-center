<li class='clearfix record <%= cycle("on", "on-hover") %>' id="<%= dom_id(category) -%>">
  <span class='title'>
    <%= category.title %>

  </span>
  <span class='actions'>
    
    <%= link_to refinery_icon_tag("delete.png"), refinery.categories_admin_category_path(category),
        :class => "cancel confirm-delete",
        :title => t('.delete'),
        :confirm => t('message', :scope => 'refinery.admin.delete', :title => category.title),
        :method => :delete %>

    <%= link_to refinery_icon_tag("application_go.png"), refinery.categories_category_path(category),
        :title => t('.view_live_html'),
        :target => "_blank" %>
    
    <%= link_to refinery_icon_tag("application_edit.png"), refinery.edit_categories_admin_category_path(category),
         :title => t('.edit') %>
    <%= link_to refinery_icon_tag("page_add.png"), "/refinery/categories/subcategories/new?id=#{category.id}",
         :title => t('.add') %>         
        
  </span>


  <div class="clearfix" >
    <%= render :partial => '/refinery/categories/admin/subcategories/subcategory', :collection => category.subcategories %>
  </div>

</li>
