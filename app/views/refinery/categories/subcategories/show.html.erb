<% content_for :body_content_title do %>
  <%= @subcategory.title %>
<% end %>

<% content_for :body do %>
  <section>
    <h1>Title</h1>
    <p>
      <%=raw @subcategory.title %>
    </p>
  </section>
  <section>
    <h1>Description</h1>
    <p>
      <%=raw @subcategory.description %>
    </p>
  </section>
<% end %>

<% content_for :side_body do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="subcategories">
      <% @subcategories.each do |subcategory| %>
        <li>
          <%= link_to subcategory.title, refinery.categories_subcategory_path(subcategory) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>
